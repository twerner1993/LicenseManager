@model IEnumerable<LicenseManagerMvc.Models.ProgrammViewModel>

@{
    ViewBag.Title = "Alle Programme";
}

<h2>Alle Programme</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genre.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hersteller.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschreibung)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hersteller.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beschreibung)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProgrammId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProgrammId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProgrammId })
        </td>
    </tr>
}

</table>
